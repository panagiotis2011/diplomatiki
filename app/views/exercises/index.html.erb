<% else %>





	<table>
 	 <tr>
	  <h1> </h1>
	   <section id = "exercises">
  		  <% @exercises.each do |exercise| %>
      		<exercise class="exercise">
            <div class = "etitle"><%= link_to exercise.etitle, exercise %></div>
            <div class = "byline"><%= l(exercise.created_at, :format => '%d %B, %Y') %> </div>
