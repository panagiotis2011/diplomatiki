<% if admin_signed_in %>

<table border="1">
    <th>Τίτλος </th>
    <th>Μέσος Όρος</th>


    <% @exercises.each do |exercise| %>
    <tr>
        <td align="center"><%= exercise.etitle %></td>

        <th><%= exercise.average %></td>
        <td><%= link_to 'Εμφάνισε', exercise %></td>
        <td><%= link_to 'Βαθμολόγησε', edit_exercise_path(exercise) %></td>
