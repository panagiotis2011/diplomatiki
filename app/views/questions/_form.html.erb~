# encoding: utf-8
<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %>: και έτσι δεν επιτρέπεται η αποθήκευση του άρθρου</h2>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <% # Ο τίτλος του άρθρου δεν μπορεί να αλλάξει εφόσον το άρθρο γίνει αποδεκτό %>
  <% if @question.state < 3 %>
    <div class="field">
        <label for="question_title">Τίτλος (Κείμενο, μέγιστος αριθμός χαρακτήρων 80)</label><br />
        <%= f.text_field :title, :size => "100%", :class => "fullwidth"  %>
    </div>
   <% else %>
    <div class="field">
        <label for="question_title">Τίτλος (Δεν μπορεί να αλλάξει εφόσον το άρθρο γίνει αποδεκτό)</label><br />
        <%= f.text_field :title, :readonly => true,  :size => "100%", :class => "fullwidth"  %>
    </div>
   <% end %>

  <div class="field">
    <label for="question_body">Το άρθρο σας (Μετατρέψτε το απλό κείμενο σε html - <%= link_to "Περισσότερα εδώ!", 'http://redcloth.org' %>)</label><br />
    <%= f.text_area :body, :size => "100%x15", :class => "fullwidth"  %>
  </div>

  <div class="field">
   <label for="tag_list">Κατηγορία (Μπορείτε να προσθέσετε διαφορετικές κατηγορίες διαχωρίζοντάς τες με κόμμα)</label><br />
    <%= f.autocomplete_field :tag_list, autocomplete_tag_name_questions_path, :"data-delimiter" => ', ' %>
  </div>

   <div class="actions">
    <%= f.submit :class => "awesome custom red" %>
    <%= link_to 'Εμφάνιση αυτού του άρθρου', @question, :class => "awesome custom black" %>
    <%= link_to 'Επιστροφή στα άρθρα μου', myquestions_questions_path, :class => "awesome custom black" %>
  </div>

<% end %>
