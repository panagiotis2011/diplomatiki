<section id = "admin">
    <h2>Admin: Dashboard</h2>

    <h3>Articles</h3>
    <p>
        Statistics:  <%=pluralize(@num_published, "published articles")%>, <%= link_to pluralize(@num_state4, "featured article"), articles_admin_index_path + '?state=4' %>,
        <%= link_to pluralize(@num_state3, "Ολοκληρωμένα άρθρα"), articles_admin_index_path + '?state=3' %>,
        <%= link_to pluralize(@num_state2, "Μη αποδεκτά άρθρα"), articles_admin_index_path + '?state=2' %>,
        <%= link_to pluralize(@num_state1, "Άρθρα προς υποβολή"), articles_admin_index_path + '?state=1' %>,
        <%= link_to pluralize(@num_state0, "Πρόχειρα άρθρα"), articles_admin_index_path + '?state=0' %>
        <br />
        <% if @num_state1 > 0 %>
            <b>There are <%= link_to pluralize(@num_state1, "submitted article") , articles_admin_index_path + '?state=1' %> waiting for approval!</b>
        <% end %>
    </p>

    <h3>students</h3>
    <p>
        Statistics: <%=pluralize(@num_students, "student") %> total, <%= pluralize(@num_students_active30days, "student") %> have been signed-in within the last 30 days.<br />
        New students: <%= pluralize(@num_students_created30days, "student") %> have been created within the last 30 days.
    </p>
</section>
