<section id = "admin">
<%= javascript_include_tag :defaults %>
<h2>Καθηγητής: <%= @state_name.capitalize %> Ερώτηση</h2>

    <% @questions.each do |question| %>
      <p>
        <h4><%= link_to question.title, question %></h4>
        Δημιουργός: <%= question.user.fullname %>

        <%= link_to 'Διαγραφή', question, :confirm => 'Προσοχή! Αυτή η ενέργεια θα διαγράψει οριστικά το άρθρο. Να γίνει η διαγραφή;', :method => :delete %>

        <% if question.state == 1 %>
          <%= link_to 'Απόρριψη', editreject_admin_path(question) %>
          <%= link_to 'Όλες οι ερωτήσεις', accept_admin_path(question, :value => '0'), :method => :put %>
          <%= link_to 'Προτεινόμενες ερωτήσεις', accept_admin_path(question, :value => '1'), :method => :put %>
        <% end %>
      </p>
    <% end %>
</section>
